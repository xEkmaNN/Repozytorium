
function klik()
{
    let haslo = document.querySelector("input[name='haslo']");
    let phaslo = document.querySelector("input[name='phaslo']");


    if(haslo.value!=phaslo.value)
    {
        alert("hasło różni się od powtorzonego hasła");
    }
    else
    {
        alert("Hasła się pokrywa z powtórzonym hasłem");
    }

}

